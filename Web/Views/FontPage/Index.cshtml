}

@section css{
    <link href="~/Scripts/Swiper-4.5.0/css/swiper.min.css" rel="stylesheet" />
    <style>
        .text-title {
            font-size: 28px;
            font-weight: 500;
            padding-bottom: 10px;
            border-bottom: 1px solid #162F67;
            display: inline-block;
            color: rgba(51,51,51,1);
        }
        .line {
            height: 1px;
            background-color: #DCDCDC;
        }
        .body-content {
            width: 100%;
            height: 100%;
        }

        .top-img-box {
            height:682px;
            overflow:hidden;
        }

            .top-img-box img {
                width: 100%;
            }

        /*企业概况*/
        .enterprise-info-box {
            padding: 80px 150px;
            height: 380px;
            display: flex;
            align-items: stretch;
        }


        .enterprise-info-box-head {
            color: white;
            background-color: #162F67;
            height: 100%;
            padding: 0 20px;
            flex-shrink: 0;
        }

        .enterprise-info-swiper {
            flex-grow: 1;
            width: 0;
            flex-shrink: 0;
        }

        #enterprise-info-next {
            height: 100%;
            width: 40px;
            background-color: #E2E9EF;
            padding: 0 5px;
            display: flex;
            align-items: center;
        }

        .enterprise-info-swiper .swiper-slide {
            overflow: hidden;
            position: relative;
        }

            .enterprise-info-swiper .swiper-slide > img {
                width: 100%;
                position: absolute;
                z-index: -1;
            }

        .enterprise-info-slide-text {
            display: flex;
            flex-direction: column;
            height: 100%
        }


            .enterprise-info-slide-text .text-top {
                flex-grow: 1;
                height: 0;
                overflow: hidden;
                background-color: rgba(255,255,255,0.5);
                position: relative;
                left: -100%;
                transition: left 0.5s;
                display:flex;
                padding:20px 10px;
                align-items:center;
                text-indent:2em;
                font-size:14px;
                line-height:18px;
            }

        .enterprise-info-swiper .swiper-slide:hover .text-top {
            left: 0;
        }

        .enterprise-info-slide-text .text-bottom {
            flex-shrink: 0;
            height: 60px;
            padding-top: 20px;
            padding-left: 30px;
            display: flex;
            background-color: rgba(255,255,255,0.5);
            font-size: 18px;
        }

            .enterprise-info-slide-text .text-bottom > div {
                height: 100%;
                border-top: 1px solid #162F67;
                display: flex;
                align-items: center;
            }

        #enterprise-info-next img {
            width: 100%;
        }

        /*新闻中心*/
        .news-center-box {
            width: 100%;
            background: linear-gradient(90deg,#ffffff 40px,#F8F8F8 40px,#F8F8F8 100%);
        }
        .news-center-box-title {
        padding-left:150px;
        padding-top:10px;
        }
        .news-center-box-content {
        padding:50px 150px 50px 150px;
        display:flex;
        align-items:stretch;
        justify-content:space-between;
        }
        .news-center-box-content-left {
        width:45%;
        }
            .news-center-box-content-left img {
            width:100%;
            }
            .news-center-box-content-right {
                width: 55%;
            }

        .news-content > .title {
            font-size: 24px;
            font-weight: 400;
            color: rgba(51,51,51,1);
        }
        .news-content > .prop {
            font-size: 16px;
            font-weight: 400;
            color: rgba(116,116,116,1);
            margin-top:20px;
        }
        .news-content > .content {
            font-size: 18px;
            font-weight: 400;
            color: rgba(51,51,51,1);
            margin-top: 20px;
        }
        .news-center-box-content-right {
        flex-grow:1;
        width:0;
        margin-left:60px;
        }
        .news-classify {
        display:flex;
        font-size:18px;
        height:40px;
        position:relative;
        color:#333333;
        }
            .news-classify > .classify {
                height: 100%;
                padding:0 10px;
            }
        .current-classify {
            color: #162F67;
            border-bottom: 1px solid #162F67;
            z-index:100;
        }
        .news-classify > .classify:nth-child(n+2) {
            margin-left: 40px;
        }

        .news-classify-content > div {
        display:flex;
        margin-top:40px;
        align-items:flex-start;
        }
            .news-classify-content > div > .numberbox {
                font-size: 60px;
                color: rgba(154,154,154,1);
                padding-right: 24px;
                margin-right: 24px;
                border-right: 1px solid #757575;
            }
        /*楼盘风采*/
        .building-box {
            width: 100%;
            margin-top:40px;
        }
        .building-title {
            padding-left: 150px;
        }
        .building-content {
            padding: 60px 150px;
            display: flex;
        }
            .building-content > div {
            height:630px;
            }
        .swiper-nav {
            height: 100%;
            width: 40px;
            background-color: #E2E9EF;
            display: flex;
            align-items: center;
        }
        .swiper-nav img{
        width:100%;
        }
        .building-intro {
            width: 350px;
            height:100%;
            display: flex;
            flex-direction: column;
        }
            .building-intro > .imgbox {
            width:350px;
            height:410px;
            background-repeat:no-repeat;
            background-size:cover;
            }
            .building-intro > .contentbox {
                background-color: #F2F2F2;
                display:flex;
                flex-direction:column;
                flex-grow:1;
                padding:25px;
            }
    </style>
}
