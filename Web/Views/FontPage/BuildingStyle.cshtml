            justify-content: flex-end;
            padding-right: 150px;
            margin: 80px 0;
            align-items: center;
        }

        .pageBtn {
            margin-left: 10px;
            padding: 5px 10px;
            font-size: 18px;
            border: 1px solid #D2D2D2;
            border-radius: 5px;
            color: #757575;
            cursor: pointer;
        }

        .gotoPage {
